{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "fanuc.cnc",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#nc"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
				"name": "comment.line.sinumerik",
				"begin": ";",
				"end": "\\n"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
				"name": "keyword.control.fanuc-cnc",
				"match": "\\b(IF|THEN|ELSE|GOTO|ENDIF|WHILE|EQ|NE|LE|LT|GE|GT|AND|OR|XOR)\\b"
				},
				{
					"name":"keyword.control.fanuc-cnc",
					"match": "([DO][1-5]*)|([END][1-5]*)"
				}
			]
		},
		"variables": {
			"patterns": [
				{
                    "match": "[0-9]+",
                    "name": "entity.name.tag"
				},
				{
                    "match": "[a-zA-Z_]+[a-zA-Z_]+",
                    "name": "meta.preprocessor.numeric"
				},
				{
                    "match": "[#]",
                    "name": "string.regexp"
				}
			]
		},
		"nc": {
			"patterns": [
				{
                    "match": "\\b[gG][0-9.]{1,4}",
                    "name": "string.regexp"
                },
				{
                    "match": "\\b[mM][0-9]{1,3}",
                    "name": "string.regexp"
                }
			]
		},
		"operators": {
            "patterns": [
                {
                    "match": "(SIN)|(COS)|(TAN)|(ASIN)|(ACOS)|(ATAN)|(LN)|(SQRT)|(MOD)|(EXP)",
                    "name": "support.constant.math"
                },
                {
                    "match": "(FIX)|(FUP)|(ROUND)|(ABS)",
                    "name": "support.constant.math"
                },
                {
                    "match": "(\\+)|(\\*)|(\\/)|(\\*\\*)|(=)",
                    "name": "support.constant.math"
                },
                {
                    "match": "(\\-)",
                    "name": "keyword.control"
                }
            ]
		}
	},
	"scopeName": "source.fanuc"
}